@model EmployeeProject.Models.Employee

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Account.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactDetails.MobilePhone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactDetails.MobilePhone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PersonalDetails.SSN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PersonalDetails.SSN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorkContract.EmployeeID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorkContract.EmployeeID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MyStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MyStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Insurance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Insurance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorkRole)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorkRole)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RemaingDaysOfLeave)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RemaingDaysOfLeave)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Salary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Requests)
        </dt>
        <dd>
            <table class="table table-bordered">
                <tr>
                    <th>Date of request</th>
                    <th>Reason</th>
                    <th>Duration</th>
                    <th>Period</th>
                    <th>Status</th>
                </tr>
                @foreach(var item in Model.Requests)
                {
                    string selectedRow = "alert-danger";
                    if(item.IsAccepted)
                    {
                        selectedRow = "success";
                    }
                <tr>
                    <td>
                        @item.DateRequestedLeave
                    </td>
                    <td>
                        @item.Leave.Type
                    </td>
                    <td>
                        @item.Leave.HowManyDays
                    </td>
                    <td>
                        @item.Leave.StartDateOfLeave - @item.Leave.EndDateOfLeave
                    </td>
                    <td class="@selectedRow">
                        @item.IsAccepted
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
